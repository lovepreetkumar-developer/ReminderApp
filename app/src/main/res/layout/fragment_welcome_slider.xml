<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_primary_background">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpSlides"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabLayoutDots" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutDots"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_7sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:tabBackground="@drawable/welcome_tab_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="@dimen/_10sdp"
        app:tabPaddingStart="@dimen/_10sdp"
        android:layout_above="@+id/tvSkip"
        app:tabRippleColor="@null"
        app:tabMaxWidth="@dimen/_18sdp"
        android:background="@color/transparent"
        app:tabSelectedTextColor="@color/transparent"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/transparent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSkip"
        style="@style/CustomTextViewMedium"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:text="@string/skip"
        android:textColor="@color/yellow_primary_dark"
        android:textSize="@dimen/_13sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNext"
        style="@style/CustomTextViewMedium"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />

</RelativeLayout>