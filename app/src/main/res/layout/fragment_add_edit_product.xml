<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/partial_toolbar_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:text="@string/product_name"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etProductName"
                    style="@style/CustomEditText"
                    android:ellipsize="end"
                    android:hint="Apple"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/color_item_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_category"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_border_gray_more"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp">

                    <RelativeLayout
                        android:id="@+id/rlImage"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@drawable/image_circle_back">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_shape_able"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:src="@drawable/ic_fruits" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerCurrencies"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/rlImage"
                        android:backgroundTint="@color/white"
                        android:entries="@array/currencies" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCategory"
                        style="@style/CustomTextViewMedium"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/rlImage"
                        android:padding="@dimen/_5sdp"
                        android:text="Fruits" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgDownArrow"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:src="@drawable/ic_down_arrow"
                        android:tint="@color/colorGrayDark" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_expiry_date"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etExpiry"
                    style="@style/CustomEditText"
                    android:ellipsize="end"
                    android:hint="02/10/2020"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/color_item_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/note"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etNote"
                    style="@style/CustomEditText"
                    android:ellipsize="end"
                    android:hint="@string/lorem_ipsum_short"
                    android:importantForAutofill="no"
                    android:minLines="2"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/color_item_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/set_alarm_reminder"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/rlReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_border_gray_more"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTime"
                        style="@style/CustomTextViewRegular"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="@string/time"
                        android:textColor="@color/blue_forgot_password" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTimeValue"
                        android:layout_toStartOf="@+id/imgAlarm"
                        android:layout_width="match_parent"
                        style="@style/CustomTextViewRegular"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/tvTime"
                        android:text="10:00"
                        android:padding="@dimen/_5sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgAlarm"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_9sdp"
                        android:src="@drawable/ic_alarm" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvProduct"
                        style="@style/CustomTextViewRegular"
                        android:layout_centerVertical="true"
                        android:text="@string/product_qty"
                        android:textColor="@color/yellow_primary_dark"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/tvProduct"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgPlus"
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:src="@drawable/ic_plus_filled" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvProductQty"
                            style="@style/CustomTextViewRegular"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/_1"
                            android:textSize="@dimen/_8sdp"
                            tools:text="1" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgMinus"
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:src="@drawable/ic_minus_filled" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_unit_price"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etUnitPrice"
                    style="@style/CustomEditText"
                    android:ellipsize="end"
                    android:hint="00.00"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/color_item_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_list_total"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etListTotal"
                    style="@style/CustomEditText"
                    android:ellipsize="end"
                    android:hint="00.00"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/color_item_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_rating"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    style="?android:ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_minus22sdp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="3"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:theme="@style/RatingBar" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/CustomTextViewRegular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/product_image"
                    android:textColor="@color/yellow_primary_dark"
                    android:textSize="@dimen/_10sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/color_gray_button">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivProduct"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_product_one" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/llUpload"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUpload"
                            style="@style/CustomTextViewMedium"
                            android:text="@string/upload_image"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_upload" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNext"
                    style="@style/CustomButton"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
