<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <gradient android:angle="90"
                android:endColor="@color/shadow" android:startColor="#ccc" />
            <corners android:radius="@dimen/_20sdp" />

        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="@dimen/_1sdp"
        android:top="0dp"
        android:bottom="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_20sdp" />
            <solid android:color="@color/color_tab_selected" />
        </shape>
    </item>

</layer-list>